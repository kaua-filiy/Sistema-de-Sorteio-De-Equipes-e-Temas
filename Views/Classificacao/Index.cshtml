@model List<Pessoa>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>Cadastro de Pessoas para Classificação</h2>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">Preencha as informações das pessoas para realizar a classificação.</p>
                    
                    <form asp-action="Resultado" method="post" class="needs-validation" novalidate>
                        <div class="row">
                            @for (int i = 0; i < 5; i++)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 border-info">
                                        <div class="card-header bg-light">
                                            <h5 class="mb-0">Pessoa @(i+1)</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-3">
                                                <label for="[@i].Nome" class="form-label">Nome</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                                    <input name="[@i].Nome" class="form-control" placeholder="Digite o nome" required />
                                                </div>
                                                <div class="invalid-feedback">
                                                    Por favor, informe o nome.
                                                </div>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label for="[@i].Idade" class="form-label">Idade</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-calendar3"></i></span>
                                                    <input name="[@i].Idade" class="form-control" type="number" min="1" max="120" placeholder="Digite a idade" required />
                                                </div>
                                                <div class="invalid-feedback">
                                                    Por favor, informe uma idade válida.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-info text-white">
                                <i class="bi bi-check-circle me-1"></i> Verificar Classificação
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@section Scripts {
    <script>
        (function () {
            'use strict'
            
            var forms = document.querySelectorAll('.needs-validation')
            
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
