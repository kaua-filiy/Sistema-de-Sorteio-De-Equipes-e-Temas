@model Tema

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0"></i>Cadastro de Tema</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="Nome" class="form-label">Nome do Tema</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do tema" required />
                            </div>
                            <div class="invalid-feedback">
                                Por favor, informe o nome do tema.
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label for="Descricao" class="form-label">Descrição</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Digite uma descrição detalhada do tema" required></textarea>
                            </div>
                            <div class="invalid-feedback">
                                Por favor, informe uma descrição para o tema.
                            </div>
                            <div class="form-text">
                                Descreva o tema com detalhes suficientes para orientar o trabalho das equipes.
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bi bi-arrow-left me-1"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

@section Scripts {
    <script>
        (function () {
            'use strict'
            
            
            var forms = document.querySelectorAll('.needs-validation')
            
        
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
